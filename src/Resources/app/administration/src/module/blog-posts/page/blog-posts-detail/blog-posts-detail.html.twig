{% block blog_posts_detail %}
    <sw-page class="blog-posts-detail">
        <template #smart-bar-actions>
            <sw-button :routerLink="{ name: 'blog.posts.list' }">
                {{ $tc('blog-posts.detail.cancelButtonText') }}
            </sw-button>
            
            <sw-button-process 
                :isLoading="isLoading"
                :processSuccess="processSuccess"
                variant="primary"
                @process-finish="saveFinish"
                @click="onClickSave">
                {{ $tc('blog-posts.detail.saveButtonText') }}
            </sw-button-process>
            <sw-button @click="onClickDelete">
                {{ $tc('blog-posts.detail.deleteButtonText') }}
            </sw-button>
        </template>
        
        <template #content>
            <sw-card-view>
                <sw-card v-if="posts" :isLoading="isLoading">
                    <sw-field v-model="posts.name" :label="$tc('blog-posts.detail.nameLabel')"></sw-field>
                    <sw-text-editor v-model="posts.description" :label="$tc('blog-posts.detail.descriptionLabel')"></sw-text-editor>
                    <sw-boolean-radio-group
                        v-model="posts.active"
                        :label="$tc('blog-posts.detail.statusLabel')"
                        labelOptionTrue="Published"
                        labelOptionFalse="Draft"> 
                    </sw-boolean-radio-group>
                    <sw-field 
                        v-model="posts.created_at" 
                        :disabled="true"
                        :placeholder="$tc('blog-posts.detail.createdDatePlaceholder')" 
                        :label="$tc('blog-posts.detail.createdDate')">
                    </sw-field>
                    <sw-field 
                        v-model="posts.updated_at" 
                        :disabled="true"
                        :placeholder="$tc('blog-posts.detail.createdDatePlaceholder')" 
                        :label="$tc('blog-posts.detail.updatedDate')">
                    </sw-field>
                </sw-card>
            </sw-card-view>
        </template>
    </sw-page>
{% endblock %}