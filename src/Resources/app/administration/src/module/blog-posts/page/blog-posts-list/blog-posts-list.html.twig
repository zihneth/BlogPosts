{% block blog_posts_list %}
    <sw-page class="blog-posts-list">
        {% block blog_posts_list_smart_bar_actions %}
        <template #smart-bar-actions>
            <sw-button variant="primary" :routerLink="{ name: 'blog.posts.create' }">
                {{ $tc('blog-posts.list.addButtonText') }}
            </sw-button>
        </template>
        {% endblock %}
        
        <template #content>
            {% block blog_posts_list_content %}
            <sw-entity-listing
                v-if="posts"
                :items="posts"
                :repository="repository"
                :showSelection="false"
                :columns="columns"
                detailRoute="blog.posts.detail">
            </sw-entity-listing>
            {% endblock %}
        </template>
    </sw-page>
{% endblock %}